<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<div class="row row-cols-4">
  <div id="new_movie_form" class="card mb-2 mr-1">
    <div class="card-body">
        <%= render "movies/form", movie: Movie.new %>
    </div>
  </div>
  <% @movies.each do |movie| %>
      <div id="<%= dom_id(movie) %>" class="card mb-2 mr-1">
    <div class="card-body">
      <%= render "movies/movie/title", movie: movie %>
      <%= render "movies/movie/director", movie: movie %>
      <%= render "movies/movie/duration", movie: movie %>
      <%= render "movies/movie/year", movie: movie %>
      <%= render "movies/movie/description", movie: movie %>
    </div>
    <div class="card-footer">
        <%= link_to 'Destroy', movie, 
            method: :delete,
            remote: true, 
            data: { confirm: 'Are you sure?' } 
            %>
        <%= link_to 'Show', movie %>
    </div>
  </div>
  <% end %>
</div>

<br>
